extends layout
block content
    .breadcrumb
        each crumb in breadcrumbs
            li
                a(href=crumb.path) #{crumb.name}
    div.container-fluid
        - var path
        - var pathslice = pathname.split('/').slice(0,-1);
        - if(pathslice == ''){ 
            - path = '/';
        - }
        - else{
            - path = pathslice.join('/'); 
        - }
        ul.pager
            //-li.previous
                a(href='previous') Previous
            li 
                a(href=path + '?start=' + start) Up
            //-li.next
                a(href='next') Next

    //- .panel.panel-default
